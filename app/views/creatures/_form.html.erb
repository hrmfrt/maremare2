<%= form_with(model: creature) do |form| %>
  <% if creature.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(creature.errors.count, "error") %> prohibited this creature from being saved:</h2>

      <ul>
        <% creature.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group form-horizontal">
    <%= form.label :和名, {class: "col-sm-3 control-label"}  %>
    <%= form.text_field :japanese_name, {class: "col-sm-6 form-control"}  %>
  </div>

  <div class="form-group form-horizontal">
    <%= form.label :学名, {class: "col-sm-3 control-label"}  %>
    <%= form.text_field :scientific_name, {class: "col-sm-6 form-control"}  %>
  </div>

  <div class="form-group form-horizontal">
    <%= form.label :生き物情報, {class: "col-sm-3 control-label"}  %>
    <%= form.text_area :information, {class: "col-sm-6 form-control"}  %>
  </div>
  

  <%# カテゴリー2を選択する　%>
  <div class="form-group form-horizontal">
    <%= form.label :"カテゴリー2 選択" %>
    <%= form.collection_select :category_second_id, CategorySecond.all, :id, :name, { prompt: false }, class:"form-control form-control-sm col-lg-5"%>
  </div>
    <%# 書いた人を選択する　%>
  <div class="form-group form-horizontal">
    <%= form.label :"説明文書いた人" %>
    <%= form.collection_select :columned_by_id, ColumnedBy.all, :id, :name, { prompt: false }, class:"form-control form-control-sm col-lg-5"%>
  </div>
  <div class="actions">
    <%= form.submit :"Update", class: "btn btn-outline-secondary" %>
  </div>
<% end %>
