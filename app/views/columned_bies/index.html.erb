<!--個別ページのmeta_tagを設定-->
<% set_meta_tags site: "まれじめんと", 
                 title: "コラム書いてくれた人一覧",
                 noindex: true 
%>

<!--まれじめんとのヘッダーパーシャル-->
<%= render './maregiment/maregiment_header'%>

<!--ここからメイン-->
<p id="notice"><%= notice %></p>
<div class="form_wrapper" style="padding:20px">
  <h1>説明文書いてくれた人</h1>

  <table>
    <thead>
      <tr>
        <th>名前</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @columned_bies.each do |columned_by| %>
        <tr>
          <td><%= columned_by.name %></td>
          <td><%= link_to '編集', edit_columned_by_path(columned_by) %></td>
          <td><%= link_to '削除', columned_by, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to '新規追加', new_columned_by_path %><br>
  <%= link_to 'まれじめんと top', maregiment_path %>
</div>
