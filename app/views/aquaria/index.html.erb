<!--csv の導入はここを参考にした。 https://qiita.com/okhrt/items/3e98ba496bcf8c50ac64-->
<%= stylesheet_link_tag "maregiment/bootstrap.min.css", media: "all", 'data-turbolinks-track': "reload" %>
<%= javascript_include_tag 'Bootstrap/bootstrap.min.js' %>

<div style="padding:20px">
<p id="notice"><%= notice %></p>

<%= link_to '新規水族館情報追加', new_aquarium_path %> |
<%= link_to 'まれじめんと', maregiment_path %>
<br>
<br>

<p>【csvからデータをインポートする。】</p>
<%= form_tag import_aquaria_path, multipart: true do %>
  <%= file_field_tag :file %>
  <%= submit_tag "インポート" %>
<% end %>

<br>
<h1>水族館一覧</h1>

<table>
  <thead>
    <tr>
      <th>名前</th>
      <th>読み方</th>
      <th>所在県</th>
      <th>住所</th>
      <th>ホームページ</th>
      <th>その他情報</th>
      <th>順番</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @aquaria.each do |aquarium| %>
      <tr>
        <td><%= aquarium.name %></td>
        <td><%= aquarium.reading %></td>
        <td><%= aquarium.prefecture %></td>
        <td><%= aquarium.place %></td>
        <td><%= aquarium.homepage %></td>
        <td><%= aquarium.information %></td>
        <td><%= aquarium.order %></td>
        <td><%= link_to '編集', edit_aquarium_path(aquarium) %></td>
        <td><%= link_to '削除', aquarium, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= link_to '料金情報追加', edit_aquarium_path(aquarium) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>





