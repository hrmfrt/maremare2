<%= stylesheet_link_tag "maregiment/bootstrap.min.css", media: "all", 'data-turbolinks-track': "reload" %>
<%= javascript_include_tag 'Bootstrap/bootstrap.min.js' %>
<div style="padding: 20px">


<%= form_with(model: category) do |form| %>
  <% if category.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(category.errors.count, "error") %> prohibited this category from being saved:</h2>

      <ul>
        <% category.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group form-horizontal">
    <%= form.label :"分類1 名称", {class: "col-sm-3 control-label"}  %>
    <%= form.text_field :name, {class: "col-sm-6 form-control"} %>
  </div>

  <div class="form-group form-horizontal">
    <%= form.label :"順番", {class: "col-sm-3 control-label"}  %>
    <%= form.number_field :order, {class: "col-sm-6 form-control"} %>
  </div>

  <div class="form-group form-horizontal">
    <%= form.label :"ボタン用写真", {class: "col-sm-3 control-label"}  %>
    <%= form.file_field :picture, {class: "col-sm-6 form-control"} %>
  </div>

  <div class="actions form-group form-horizontal">
    <%= form.submit :"Update", class: "btn btn-outline-secondary" %>
  </div>
<% end %>
