<%= form_with(model: photo_set) do |form| %>
  <% if photo_set.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(photo_set.errors.count, "error") %> prohibited this photo_set from being saved:</h2>
      <ul>
        <% photo_set.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :"名前 (なんでもいいよ)" %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :写真選択 %>
    <%= form.file_field :image_sets, direct_upload: true, multiple: true %>
  </div>

  <%# 書いた人を選択する　%>
  <%= form.label :生き物の名前 %>
  <%= form.collection_select :creature_id, Creature.all, :id, :japanese_name%><br><br>

  <%# 撮った人を選択する　%>
  <%= form.label :写真撮った人 %>
  <%= form.collection_select :photo_by_id, PhotoBy.all, :id, :name%><br><br>
  <%# 撮った人を選択する　%>
  <%= form.label :水族館 %>
  <%= form.collection_select :aquarium_id, Aquarium.all, :id, :name%><br><br>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
